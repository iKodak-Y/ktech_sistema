<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlador.FacturacionController">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            
            <!-- Título -->
            <Label text="Facturación" styleClass="title-label">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
            
            <!-- Sección Cliente -->
            <GridPane hgap="10.0" vgap="5.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="120.0"/>
                    <ColumnConstraints hgrow="SOMETIMES"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="120.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="30.0" prefHeight="30.0"/>
                </rowConstraints>
                <children>
                    <Label text="Cliente:"/>
                    <TextField fx:id="txtCliente" promptText="Ingrese cédula/RUC o nombre" GridPane.columnIndex="1"/>
                    <Button onAction="#buscarCliente" text="Buscar Cliente" GridPane.columnIndex="2"/>
                    <Label fx:id="lblInfoCliente" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
                </children>
            </GridPane>
            
            <!-- Sección Productos -->
            <VBox spacing="10.0">
                <GridPane hgap="10.0" vgap="5.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="120.0"/>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="120.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="30.0" prefHeight="30.0"/>
                    </rowConstraints>
                    <children>
                        <Label text="Producto:"/>
                        <TextField fx:id="txtBuscarProducto" promptText="Ingrese código o nombre del producto" GridPane.columnIndex="1"/>
                        <Button onAction="#buscarProducto" text="Agregar Producto" GridPane.columnIndex="2"/>
                    </children>
                </GridPane>
                <ListView fx:id="listaProductos" prefHeight="100.0" visible="false"/>
            </VBox>
            
            <!-- Tabla de Detalles -->
            <TableView fx:id="tblDetalles" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colCodigo" text="Código" prefWidth="100.0"/>
                    <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="200.0"/>
                    <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="80.0"/>
                    <TableColumn fx:id="colPrecio" text="Precio Unit." prefWidth="100.0"/>
                    <TableColumn fx:id="colSubtotal" text="Subtotal" prefWidth="100.0"/>
                    <TableColumn fx:id="colIVA" text="IVA" prefWidth="80.0"/>
                    <TableColumn fx:id="colTotal" text="Total" prefWidth="100.0"/>
                </columns>
            </TableView>
            
            <!-- Sección Totales -->
            <GridPane hgap="10.0" vgap="5.0" alignment="CENTER_RIGHT">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="120.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="120.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="25.0" prefHeight="25.0"/>
                    <RowConstraints minHeight="25.0" prefHeight="25.0"/>
                    <RowConstraints minHeight="25.0" prefHeight="25.0"/>
                </rowConstraints>
                <children>
                    <Label text="Subtotal:" GridPane.rowIndex="0"/>
                    <Label fx:id="lblSubtotal" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    <Label text="IVA:" GridPane.rowIndex="1"/>
                    <Label fx:id="lblIVA" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <Label text="Total:" GridPane.rowIndex="2"/>
                    <Label fx:id="lblTotal" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                </children>
            </GridPane>
            
            <!-- Botones de Acción -->
            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                <Button onAction="#emitirFactura" text="Emitir Factura" styleClass="button-primary">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Button>
                <Button onAction="#cancelar" text="Cancelar"/>
                <Button onAction="#cerrar" text="Cerrar"/>
            </HBox>
        </VBox>
    </children>
    
    <stylesheets>
        <URL value="@../styles/styles.css"/>
    </stylesheets>
</AnchorPane>